%div.map

%div.content
  = form_tag root_path, method: :get do
    = text_field_tag :place
    = submit_tag

  %section.wikipedia
    %header.powered-by Wikipedia
    - if @article.available?
      %h1= link_to @article.title, @article.url, target: '_blank'
      %p= raw @article.summary
  %section.flickr
    %header.powered-by Flickr
    - if @photos
      %ul.photos
        - @photos.each do |thumb, url|
          %li(style="background-image: url(#{thumb})")
            = link_to '', url, target: '_blank'
